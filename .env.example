# Backend Configuration
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# GitHub Excel Configuration (REQUIRED!)
# Fetch Excel file directly from a GitHub repository
GITHUB_EXCEL_REPO=owner/repo-name
GITHUB_EXCEL_PATH=API_MetaData.xlsx
GITHUB_EXCEL_BRANCH=main
# GITHUB_EXCEL_TOKEN=ghp_your_token_here  # Optional: only needed for private repos
EXCEL_CACHE_TIMEOUT=300  # Cache timeout in seconds (default: 300 = 5 minutes)

# GitHub Configuration (Optional - can be provided via UI)
# GITHUB_TOKEN=your_github_personal_access_token_here

# GitHub Enterprise Configuration
# For GitHub.com (default):
# GITHUB_API_BASE=https://api.github.com
# For HSBC GitHub Enterprise:
GITHUB_API_BASE=https://alm-github.systems.uk.hsbc/api/v3

# SSL Certificate Configuration
# Set to 'false' to disable SSL verification (NOT RECOMMENDED for production)
# SSL_VERIFY=false
# Or provide path to custom CA certificate bundle:
# SSL_CERT_PATH=/path/to/company/ca-bundle.crt

# Proxy Configuration (for company networks)
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=http://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000

# Note: Copy this file to .env and fill in your values
# Never commit .env to version control!